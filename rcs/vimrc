" vim -b: edit binary using xxd-format
augroup Binary
    au!
    au BufReadPre  *.bin let &bin=1
    au BufReadPost *.bin if &bin | %!xxd
    au BufReadPost *.bin set ft=xxd | endif
    au BufWritePre *.bin if &bin | %!xxd -r
    au BufWritePre *.bin endif
    au BufWritePost *.bin if &bin | %!xxd
    au BufWritePost *.bin set nomod | endif
augroup END

function! GotoConfig()
    cd $CONFIG_DIR
endfun

function! ToggleEditMode()
    let g:edit_mode = g:edit_mode + 1
    if g:edit_mode >= len(g:edit_modes)
        let g:edit_mode = 0
    endif
    if g:edit_mode == 0 | set fo-=t | endif
    if g:edit_mode == 1 | set fo+=t | endif
    echo "entry mode:" g:edit_modes[g:edit_mode]
endfun
map <F5> :call ToggleEditMode()<CR>
map! <F5> <ESC>:call ToggleEditMode()<CR>

function! ToggleCodeMode()
    let g:code_mode = g:code_mode + 1
    if g:code_mode >= len(g:code_modes)
        let g:code_mode = 0
    endif
    if g:code_mode == 0
        set shiftwidth=4
        set softtabstop=4
        set expandtab
    endif
    if g:code_mode == 1
        set shiftwidth=8
        set softtabstop=8
        set noexpandtab
    endif
    echo "code mode:"g:code_modes[g:code_mode]
endfun
map <F6> :call ToggleCodeMode()<CR>
map! <F6> <ESC>:call ToggleCodeMode()<CR>


function! EmailEditMode()
    let g:edit_mode=0
    call ToggleEditMode()

    let g:code_mode=1
    call ToggleCodeMode()
endfun

function! CodeEditMode()
    let g:edit_mode=1
    call ToggleEditMode()
endfun


function! NonKernelCode()
   call CodeEditMode()

    let g:code_mode=1
    call ToggleCodeMode()

    let g:Tlist_Auto_Open = 0
endfun

function! KernelCode()
    call CodeEditMode()

    let g:code_mode=0
    call ToggleCodeMode()

    let g:Tlist_Auto_Open = 0
endfun

function! JavaCode()
    call NonKernelCode()
    "let g:Tlist_Auto_Open = 2
    ": TlistToo
endfun


"
" Toggle fold state between closed and opened
" with the space bar. If there is no fold at
" current line, just moves forward.  If it is present,
" reverse its state. Use zf<move action> to create fold.
" zf% to create fold on function, for example.
"
function! ToggleFold()
    if foldlevel('.') == 0
        normal! l
    else
        if foldclosed('.') < 0
            . foldclose
        else
            . foldopen
        endif
    endif
    " Clear status line
    echo
endfunction
noremap <buffer> <space> :call ToggleFold()<CR>

