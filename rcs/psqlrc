\set HISTFILE ~/.config/psql/history- :HOST - :DBNAME
\pset null '[null]'
\set HISTCONTROL ignoredups
\set HISTCONTROL ignorespace
\timing
\set COMP_KEYWORD_CASE upper
\set IGNOREEOF 5
\set PROMPT1 '(%n@%m) [%/] > '
\set PROMPT2 '->'

-- To run these aliases, prepend :, i.e., :showtables
\set users 	'SELECT * from pg_user;'
\set conninfo   'SELECT usename, count(*) FROM pg_stat_activity GROUP BY usename;'
\set showlocks  'select table_id, last_update, lock_owner, lock_owner_pid, lock_status from stv_locks ;'
\set showrunning 'select pid, trim(user_name), starttime, substring(query,1,40) from stv_recents where status=\'Running\';'
\set tablesize  `cat $RC_DIR/psql-table-sizes.sql`
\set usergroups `cat $RC_DIR/psql-user-groups.sql`
\set groupprivs `cat $RC_DIR/psql-group-privs.sql`
\set aliases 	`cat $RC_DIR/psql-aliases.sql`
\set showtables 'select table_name FROM information_schema.tables WHERE table_type=\'BASE TABLE\' and table_schema=\'public\' ;'
\set showviews  'select table_name FROM information_schema.tables WHERE table_type=\'VIEW\' and table_schema=\'public\' ;'
\set gen_view_ddl `cat $RC_DIR/psql-v-generate-tbl-ddl.sql`
\set gen_view_ext `cat $RC_DIR/psql-v-generate-ext-tbl-info.sql`
